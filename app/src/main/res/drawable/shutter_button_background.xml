<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer (New) -->
    <item android:id="@+id/shutter_shadow">
        <shape android:shape="oval">
            <solid android:color="#40000000"/>
            <!-- A semi-transparent black for the shadow -->
        </shape>
    </item>

    <!-- Outer Ring -->
    <item android:left="3dp" android:right="3dp" android:top="3dp" android:bottom="3dp">
        <shape android:shape="oval">
            <solid android:color="@color/off_white"/>
        </shape>
    </item>

    <!-- Middle Ring -->
    <item android:left="9dp" android:right="9dp" android:top="9dp" android:bottom="9dp">
        <shape android:shape="oval">
            <solid android:color="@color/accent_red"/>
        </shape>
    </item>

    <!-- Inner Circle -->
    <item android:left="27dp" android:right="27dp" android:top="27dp" android:bottom="27dp">
        <shape android:shape="oval">
            <solid android:color="#801E3C40"/> <!-- Dark Teal with 50% alpha -->
        </shape>
    </item>
</layer-list>