<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer: a slightly larger, semi-transparent shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1A000000" /> <!-- 10% black for shadow -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Foreground Layer: the actual white background, slightly smaller -->
    <item
        android:left="1dp"
        android:right="1dp"
        android:top="1dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/off_white" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</layer-list>