<resources>
    <!-- You can add these to your existing themes.xml or a new styles.xml -->
    <style name="DefaultPillButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/dark_teal</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="SelectedPillButton" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/accent_red</item>
        <item name="android:textColor">@color/off_white</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <!-- New Style for the FAB -->
    <style name="FabShape" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>
</resources>